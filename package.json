{
  "name": "trpc-to-mcp",
  "license": "MIT",
  "version": "1.1.3",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "description": "tRPC to MCP adapter",
  "keywords": [
    "trpc",
    "mcp",
    "modelcontextprotocol",
    "vercel"
  ],
  "scripts": {
    "build": "tsup ./src",
    "dev": "tsup --watch",
    "release": "pnpm run build && changeset publish",
    "format": "prettier --write \"**/*.{ts,tsx,css,md}\"",
    "lint": "tsc"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iboughtbed/trpc-to-mcp.git"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.mjs"
      },
      "require": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      }
    },
    "./tools": {
      "import": {
        "types": "./dist/tools.d.ts",
        "default": "./dist/tools.mjs"
      },
      "require": {
        "types": "./dist/tools.d.ts",
        "default": "./dist/tools.js"
      }
    },
    "./adapter/vercel-mcp-adapter": {
      "import": {
        "types": "./dist/adapter/vercel-mcp-adapter.d.ts",
        "default": "./dist/adapter/vercel-mcp-adapter.mjs"
      },
      "require": {
        "types": "./dist/adapter/vercel-mcp-adapter.d.ts",
        "default": "./dist/adapter/vercel-mcp-adapter.js"
      }
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@trpc/server": "^11.4.4",
    "better-auth": "^1.3.4",
    "mcp-handler": "^1.0.1",
    "zod": "^4.0.15"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2"
  }
}
